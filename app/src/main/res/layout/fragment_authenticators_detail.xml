<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.authenticators.detail.AuthenticatorsDetailFragment"
                                                   android:background="@color/backdrop">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/issuerDetailTv"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:textColor="@color/white"
            android:textSize="20sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/accountDetailTv"
            app:layout_constraintStart_toStartOf="@+id/issuerDetailTv"
            app:layout_constraintTop_toBottomOf="@+id/issuerDetailTv" android:layout_marginTop="8dp"
            android:textColor="@color/subtext"/>
    <TextView
            android:text="@string/code_detail_code_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/issuerDetailTv"
            app:layout_constraintTop_toBottomOf="@+id/accountDetailTv" android:layout_marginTop="64dp"
            android:textColor="@color/subtext"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/codeDetailTv"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="4dp" android:textColor="@color/white" android:textSize="34sp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:id="@+id/codeValidityBar"
            app:layout_constraintStart_toStartOf="@+id/codeDetailTv"
            app:layout_constraintTop_toBottomOf="@+id/codeDetailTv" android:layout_marginTop="8dp"
            android:progressTint="@color/purple_200" app:layout_constraintEnd_toEndOf="@+id/codeDetailTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>