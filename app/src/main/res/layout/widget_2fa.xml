<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:background="@drawable/widget_background">

    <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/widgetOtpDisplay" android:textAlignment="center"
            android:textSize="24sp" android:paddingTop="2dp" android:paddingBottom="2dp"
            android:textColor="@color/subtext"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/widgetIssuer" android:textAlignment="center"
                android:textSize="12sp" android:textColor="@color/subtext" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/widgetValidity" android:layout_weight="1"
                android:textSize="12sp" android:textAlignment="center" android:textColor="@color/subtext"
                tools:text="@string/not_available"/>
    </LinearLayout>
    <TextView
            android:text="@string/widget_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" tools:text="@string/widget_info"
            android:textAlignment="center" android:textSize="12sp" android:textColor="@color/subtext"
            android:visibility="gone"/>
</LinearLayout>